<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            Hello, @context.User.Identity!.Name!
            <a href="ChangePassword">Change password</a>
            <a href="LogOut">Log out</a>
        </Authorized>
        <NotAuthorized>
            <a href="Register">Register</a>
            <a href="Login">Log in</a>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
